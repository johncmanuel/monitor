    "db:reset": "deno run --allow-read --allow-write --unstable-kv utils/db_reset.ts"
  },
  "fmt": {
    "exclude": ["types/"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}
